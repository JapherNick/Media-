#include <iostream>

/* run this program using the console pauser or add your own getch, system("pause") or input loop */

int main(int argc, char** argv) {
	
	float nota1;
    float nota2;
    float nota3;
    float media;
    
    printf("Insira sua nota 1: \n");
    scanf("%f", &nota1);
    
    printf("Insira sua nota 2: \n");
    scanf("%f", &nota2);
    
    printf("Insira sua nota 3: \n");
    scanf("%f", &nota3);
    
    media = (nota1 + nota2 + nota3) / 3;
    
    printf("Sua media: = %f \n", media);
    
    if(media >= 7)
    {
    	printf("Aprovado \n");
	}
	else
	if(media <7)
	{
		printf("Reprovado \n");
	}
	return 0;
}
